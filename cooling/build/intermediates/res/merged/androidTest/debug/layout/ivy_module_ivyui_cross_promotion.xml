<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/promotion_bg"
    android:paddingBottom="8dp">

    <RelativeLayout
        android:id="@+id/promotion_layout_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.ivy.ui.imageview.RoundImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/promotion_bg"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/promotion_img"
            app:maskType="ROUNDRECTANGLETOP" />

        <LinearLayout
            android:id="@+id/promotion_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/promotion_cancel" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="22dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/permission_ad">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="AD"
                android:textColor="@android:color/white"
                android:textSize="10dp" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_foot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/promotion_layout_bg"
        android:layout_marginTop="-15dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/promotion_app_icon"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/promotion_app_icon" />

        <TextView
            android:id="@+id/promotion_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="AppLock"
            android:textColor="@android:color/black"
            android:textSize="21dp" />

        <TextView
            android:id="@+id/promotion_app_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="11dp"
            android:maxLines="3"
            android:textColor="#737373"
            android:textSize="14dp" />

        <Button
            android:id="@+id/promotion_app_install"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/click_btn_green_with_corner"
            android:enabled="true"
            android:text="@string/ivy_module_ivyui_promotion_app_install"
            android:textColor="@android:color/white"
            android:textSize="19dp" />

    </LinearLayout>

