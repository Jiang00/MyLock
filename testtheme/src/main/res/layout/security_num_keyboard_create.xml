<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/numpad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|bottom"
    android:orientation="vertical"
    android:tag="numpad">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:text="1"
            android:textSize="0dp"
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/security_number_1"
            android:onClick="onClick"
            android:tag="button1"
            android:textColor="@color/security_numpad_font_color" />

        <Button
            android:text="2"
            android:textSize="0dp"
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/security_number_margin_left"
            android:layout_weight="1"
            android:background="@drawable/security_number_2"
            android:onClick="onClick"
            android:tag="button2"
            android:textColor="@color/security_numpad_font_color" />

        <Button
            android:text="3"
            android:textSize="0dp"
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/security_number_margin_left"
            android:layout_weight="1"
            android:background="@drawable/security_number_3"
            android:onClick="onClick"
            android:tag="button3"
            android:textColor="@color/security_numpad_font_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:text="4"
            android:textSize="0dp"
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/security_number_margin_top"
            android:layout_weight="1"
            android:background="@drawable/security_number_4"
            android:onClick="onClick"
            android:tag="button4"
            android:textColor="@color/security_numpad_font_color" />

        <Button
            android:text="5"
            android:textSize="0dp"
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/security_number_margin_left"
            android:layout_marginTop="@dimen/security_number_margin_top"
            android:layout_weight="1"
            android:background="@drawable/security_number_5"
            android:onClick="onClick"
            android:tag="button5"
            android:textColor="@color/security_numpad_font_color" />

        <Button
            android:text="6"
            android:textSize="0dp"
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/security_number_margin_left"
            android:layout_marginTop="@dimen/security_number_margin_top"
            android:layout_weight="1"
            android:background="@drawable/security_number_6"
            android:onClick="onClick"
            android:tag="button6"
            android:textColor="@color/security_numpad_font_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:text="7"
            android:textSize="0dp"
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/security_number_margin_top"
            android:layout_weight="1"
            android:background="@drawable/security_number_7"
            android:onClick="onClick"
            android:tag="button7"
            android:textColor="@color/security_numpad_font_color" />

        <Button
            android:text="8"
            android:textSize="0dp"
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/security_number_margin_left"
            android:layout_marginTop="@dimen/security_number_margin_top"
            android:layout_weight="1"
            android:background="@drawable/security_number_8"
            android:onClick="onClick"
            android:tag="button8"
            android:textColor="@color/security_numpad_font_color" />

        <Button
            android:text="9"
            android:textSize="0dp"
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/security_number_margin_left"
            android:layout_marginTop="@dimen/security_number_margin_top"
            android:layout_weight="1"
            android:background="@drawable/security_number_9"
            android:onClick="onClick"
            android:tag="button9"
            android:textColor="@color/security_numpad_font_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:orientation="horizontal">

        <Button
            android:id="@+id/number_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/security_number_margin_top"
            android:layout_weight="1"
            android:background="@drawable/normal_left"
            android:onClick="onClick"
            android:tag="number_cancel" />

        <Button
            android:text="0"
            android:textSize="0dp"
            android:id="@+id/button0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/security_number_margin_left"
            android:layout_marginTop="@dimen/security_number_margin_top"
            android:layout_weight="1"
            android:background="@drawable/security_number_0"
            android:onClick="onClick"
            android:tag="button0"
            android:textColor="@color/security_numpad_font_color" />

        <ImageButton
            android:id="@+id/backspace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/security_number_margin_left"
            android:layout_marginTop="@dimen/security_number_margin_top"
            android:layout_weight="1"
            android:background="@drawable/security_number_right"
            android:onClick="onClick"
            android:tag="backspace" />
    </LinearLayout>


    <Button
        android:id="@+id/ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/security_button_bg"
        android:tag="ok"
        android:text="@string/security_btn_next"
        android:textColor="#fff"
        android:visibility="gone" />
</LinearLayout>