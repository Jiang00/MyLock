<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.themeshop">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />

    <application
        android:allowBackup="true"
        android:supportsRtl="true">

        <activity
            android:screenOrientation="portrait"
            android:name="${APP}.internal.ShopActivity"
            android:theme="@style/ShopApp"
            android:launchMode="singleInstance"/>

        <activity
            android:screenOrientation="portrait"
            android:name="${APP}.internal.ShopLocalActivity"
            android:theme="@style/ShopApp"
            android:launchMode="singleInstance"/>

        <activity
            android:screenOrientation="portrait"
            android:name="${APP}.internal.BannerActivity"
            android:theme="@style/ShopApp"
            android:launchMode="singleInstance"/>

        <activity
            android:screenOrientation="portrait"
            android:name="${APP}.internal.DesignerActivity"
            android:theme="@style/ShopApp"
            android:launchMode="singleInstance"/>

        <activity
            android:screenOrientation="portrait"
            android:name="${APP}.internal.WallpaperActivity"
            android:theme="@style/ShopApp.FullScreen"
            android:launchMode="singleInstance"/>
    </application>

</manifest>
