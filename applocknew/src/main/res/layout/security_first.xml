<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/security_theme_primary"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="#fff"
        android:textSize="20sp"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/header_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/abs_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:choiceMode="multipleChoice"
        android:divider="@drawable/security_app_listview_driver"
        android:dividerHeight="0dp"
        android:headerDividersEnabled="false"
        android:longClickable="false" />

    <LinearLayout
        android:id="@+id/next_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d46"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/d6"
        android:layout_marginLeft="@dimen/d16"
        android:layout_marginRight="@dimen/d16"
        android:background="@drawable/security_select_button"
        android:gravity="center">

        <com.vactorapps.lib.customview.CustomerTypefaceTextView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/frist_ok"
            android:textColor="@color/A3"
            android:textSize="@dimen/s17" />

        <com.vactorapps.lib.customview.CustomerTypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d6"
            android:gravity="center"
            android:text="("
            android:textColor="@color/A3"
            android:textSize="@dimen/s17" />

        <com.vactorapps.lib.customview.CustomerTypefaceTextView
            android:id="@+id/next_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="@color/A3"
            android:textSize="@dimen/s17" />

        <com.vactorapps.lib.customview.CustomerTypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=")"
            android:textColor="@color/A3"
            android:textSize="@dimen/s17" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/for_choose_theme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <include layout="@layout/choose_theme" />
    </LinearLayout>
</LinearLayout>