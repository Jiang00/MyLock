<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:background="@color/security_theme_primary"
        android:text="@string/app_name"
        android:textColor="#fff"
        android:textSize="20sp" />

    <ListView
        android:layout_marginBottom="18dp"
        android:id="@+id/abs_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:divider="@drawable/security_app_listview_driver"
        android:headerDividersEnabled="false"
        android:dividerHeight="1px"
        android:choiceMode="multipleChoice"
        android:longClickable="false"/>

    <Button
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"
        android:layout_width="312dp"
        android:layout_height="49dp"
        android:textSize="18sp"
        android:background="@drawable/security_select_button"
        android:text="@string/security_set_password"
        android:id="@+id/next"
        android:textColor="#fff"/>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/for_choose_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/choose_theme"></include>


    </LinearLayout>





</LinearLayout>