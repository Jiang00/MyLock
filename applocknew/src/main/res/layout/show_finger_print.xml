<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="296dp"
    android:layout_height="280dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:id="@+id/abcd">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:background="@drawable/normal_rectangle"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="@string/security_open_fingerprint"
                android:fontFamily="sans-serif"

                />

            <TextView
                android:fontFamily="sans-serif"
                android:textColor="@color/security_security_black_87"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:lineSpacingExtra="4dp"
                android:maxEms="9"
                android:text="@string/security_go_open_fingerprint"
                />
        </LinearLayout>

        <ImageView
            android:layout_marginTop="13dp"
            android:layout_gravity="center"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/security_fingerprint" />

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancle"
                android:textSize="15sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="@string/security_cancel" />

            <Button
                android:background="@drawable/security_theme_color_rectangle"
                android:id="@id/ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:paddingRight="10dp"
                android:text="@string/security_tab_setting"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>