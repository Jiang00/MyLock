<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"



    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:gravity="center_vertical">
    <ImageView
        android:id="@+id/scan_result_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="37dp"
        android:src="@drawable/security_rate" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="6dp"

        android:id="@+id/security_title_bar_te"
        android:textColor="@color/security_black_87"
        android:fontFamily="serif"
        android:textSize="16sp"
        android:text="@string/security_rate_t" />
    <LinearLayout
        android:id="@+id/security_rat_close"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="6dp"
        android:gravity="center_horizontal|center_vertical">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/security_incade_cha"

            />
    </LinearLayout>
</LinearLayout>


    <TextView
        android:fontFamily="sans-serif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/security_black_87"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="62dp"
        android:textSize="13sp"
        android:id="@+id/scan_result_desc"
        android:layout_below="@id/security_title_bar_te"
        android:text="@string/security_rate_msg" />





    <LinearLayout
        android:id="@+id/two_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <Button
            android:fontFamily="sans-serif"
            android:id="@+id/security_bad_tit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="18sp"
            android:text="@string/security_rate_bad"
            android:textColor="@color/security_ftl_black_38" />
        <Button
            android:fontFamily="sans-serif"
            android:id="@+id/security_good_tit"
            android:layout_width="159dp"
            android:layout_height="42dp"
            android:layout_marginLeft="34dp"
            android:textSize="18sp"
            android:background="@drawable/evaluation_rectangle"
            android:text="@string/security_rate_good"
            android:textColor="@color/security_white_87"

            />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_below="@id/two_button"></View>


    <Button
        android:id="@+id/scan_result_resolve"
        android:layout_width="match_parent"
        android:layout_height="104px"
        android:fontFamily="sans-serif"
        android:text="@string/security_start_rat"
        android:textColor="@color/security_bt_text_sc"
        android:textSize="16sp"
        android:visibility="gone" />

    <View
        android:background="@drawable/security_shadow_"
        android:layout_width="match_parent"
        android:layout_height="8dp"></View>


    </LinearLayout>

