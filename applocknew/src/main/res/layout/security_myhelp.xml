<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/list_bg"
              android:orientation="vertical">
    <include layout="@layout/share_bar" android:id="@+id/share_bar"/>
    <ScrollView
            android:layout_width="match_parent"
            android:padding="12dp"
            android:layout_height="wrap_content">
        <LinearLayout
                android:id="@+id/help_scroll_view"
                android:layout_width="match_parent"
                android:background="@drawable/card_bg"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/overflow_btn"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:id="@+id/daily_app"
                    android:clickable="true"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/daily_app"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:id="@+id/title"
                        android:gravity="center_horizontal"/>
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="148dp"
                        android:layout_marginTop="8dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:id="@+id/app_icon"/>
            </LinearLayout>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/help_tips"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/body_text_1"
                    android:textSize="16sp"/>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="#e5e5e5"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>