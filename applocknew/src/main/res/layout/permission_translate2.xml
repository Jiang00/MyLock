<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/onclick"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:gravity="center">

    <FrameLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/quit_shape"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/pre_bj"
                android:gravity="center_horizontal|center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:padding="3dp"
                    android:src="@drawable/security_icon_cancle" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="22sp"
                android:lineSpacingExtra="2dp"
                android:text="@string/pre_tip"
                android:textColor="#595f5f"
                android:textSize="14sp" />

            <TextView
                android:layout_width="158dp"
                android:layout_height="42dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:background="@drawable/quit_shape2"
                android:text="@string/security_user_limit_confirm"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>

