<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <LinearLayout
        android:layout_width="@dimen/d301"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d141"
            android:background="@drawable/normal_rectangle"
            android:gravity="center">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/setting_lottie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/d301"
            android:layout_height="wrap_content"
            android:background="@drawable/security_normal_bootom_rectangle"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d16"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="@dimen/d2"
                android:paddingLeft="@dimen/d16"
                android:paddingRight="@dimen/d16"
                android:text="@string/finger_tip"
                android:textColor="@color/A1"
                android:textSize="@dimen/s14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d16"
                android:layout_marginRight="@dimen/d16"
                android:layout_marginBottom="@dimen/d8"
                android:layout_marginTop="@dimen/d27"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/security_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/d36"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingLeft="@dimen/d20"
                    android:paddingRight="@dimen/d8"
                    android:text="@string/security_cancel"
                    android:textColor="#805f5f5f"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/security_setup"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/d30"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/d14"
                    android:layout_weight="1"
                    android:background="@drawable/main_unlock_bj"
                    android:gravity="center"
                    android:text="@string/security_fingerprint_setup"
                    android:textColor="@color/A3"
                    android:textSize="@dimen/s14" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>