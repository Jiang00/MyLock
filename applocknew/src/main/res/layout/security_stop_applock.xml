<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="230dp"
    android:orientation="vertical">


     <FrameLayout
         android:background="@drawable/normal_rectangle"
         android:layout_gravity="center_horizontal"
         android:layout_width="330dp"
         android:layout_height="wrap_content">

         <ImageView
             android:id="@+id/linbac"
             android:layout_width="match_parent"
             android:layout_height="64dp" />

          <LinearLayout
              android:background="@drawable/normal_rectangle"
              android:layout_gravity="center_vertical|center_horizontal"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:gravity="center_vertical"
             >
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:fontFamily="sans-serif"
                  android:text="@string/security_stop_applock"
                  android:textColor="@android:color/white"
                  android:textSize="18sp"
                  />

          </LinearLayout>

     </FrameLayout>

     <LinearLayout
         android:background="@android:color/white"
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/nihaooaaa">



     <TextView
         android:lineSpacingExtra="4dp"
         android:paddingRight="20dp"
         android:layout_width="match_parent"
         android:paddingLeft="20dp"
         android:layout_height="wrap_content"
         android:layout_marginTop="24dp"
         android:fontFamily="sans-serif"
         android:gravity="left"
         android:text="@string/security_stop_applock_information"
         android:textColor="@color/security_security_black_87"
         android:textSize="15sp" />


     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="46dp"
         android:layout_marginTop="24dp"
         android:orientation="horizontal">

         <TextView
             android:layout_weight="1"
             android:layout_marginLeft="10dp"
             android:id="@+id/ok"
             android:textColor="#93a9b7"

             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:fontFamily="sans-serif"
             android:gravity="center"
             android:text="@string/security_applock_permission_allow"
             android:textSize="15sp" />

         <TextView
             android:layout_marginRight="10dp"
             android:background="@drawable/security_theme_color_rectangle"
             android:textColor="@android:color/white"

             android:id="@+id/cancle"
             android:layout_width="153dp"
             android:layout_height="match_parent"
             android:fontFamily="sans-serif"
             android:gravity="center"
             android:text="@string/security_cancel"
             android:textSize="15sp" />



     </LinearLayout>
 </LinearLayout>

    <LinearLayout
        android:background="@drawable/security_normal_bootom_rectangle"
        android:layout_width="match_parent"
        android:layout_height="13dp">



    </LinearLayout>
</LinearLayout>

