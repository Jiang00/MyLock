<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/normal_action_bar"
        ></include>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:background="@drawable/intrude_top_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
                <com.privacy.lock.view.ListViewForScrollView
                    android:divider="@null"
                    android:id="@+id/abs_list"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                     />
    <TextView
        android:visibility="gone"
        android:id="@+id/tip"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/no_intruder"
        android:textColor="@color/body_text_2"
        android:textSize="18sp"
        android:typeface="sans" />

    <CheckBox
        android:visibility="gone"
        android:id="@+id/intruder_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:text="@string/turnon_intruder"
        android:textColor="@color/body_text_2" />

    <include
        android:visibility="gone"
        layout="@layout/security_myabout_bar" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>