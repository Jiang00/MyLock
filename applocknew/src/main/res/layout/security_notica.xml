<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:clickable="true"
              android:layout_height="wrap_content">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/security_set_checked"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="20dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        >


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/security_show_noti"
            android:id="@+id/security_title_bar_te"
            android:textSize="17sp"
            android:textColor="@color/security_te_3"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/security_text_des"
        android:maxEms="15"
            android:textColor="#eeaaaaaa"
        />
    </LinearLayout>
</RelativeLayout>