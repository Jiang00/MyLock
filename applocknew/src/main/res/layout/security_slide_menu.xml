    <View
        android:layout_marginLeft="23dp"
        android:layout_marginBottom="22dp"
        android:background="#26ffffff"
        android:layout_width="220dp"
        android:layout_height="1dp"></View>


    <LinearLayout
        android:layout_marginBottom="22dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/googleplay"
            android:layout_marginLeft="34dp"
            android:layout_weight="1"
            android:background="@drawable/security_google_play"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginLeft="34dp"
            android:layout_weight="1"
            android:id="@+id/facebook"
            android:background="@drawable/security_facebook"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


        <ImageView
            android:layout_weight="1"
            android:layout_marginLeft="34dp"
            android:id="@+id/goolge"
            android:layout_gravity="right"
            android:background="@drawable/security_google"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <FrameLayout
        android:gravity="center"
        android:layout_gravity="bottom"
        android:id="@+id/slide_menu_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



