<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="240dp"
    android:orientation="vertical"

    >

    <FrameLayout
        android:layout_width="330dp"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/new_reset_top"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@drawable/normal_rectangle"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/security_reset_password"
                android:textColor="@android:color/white"
                android:textSize="22sp"

                />


        </LinearLayout>


    </FrameLayout>


    <LinearLayout
        android:background="@drawable/security_normal_bootom_rectangle"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/pattern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_reset_pattern" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:fontFamily="sans-serif"
                android:text="@string/setting_category_pattern"
                android:textSize="15sp"

                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/digital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_reset_password" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:fontFamily="sans-serif"
                android:text="@string/setting_digital_code"
                android:textSize="15sp"

                />

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:background="@android:color/transparent"></View>


</LinearLayout>
