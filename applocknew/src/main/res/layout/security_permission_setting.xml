<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="#e0000000"

    >




    <LinearLayout
        android:gravity="center"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal|bottom">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/security_theme_color"
            android:gravity="center_horizontal|center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="@string/security_apps_open_permission"
                android:textColor="@android:color/white"
                android:textSize="18sp"

                />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:src="@drawable/security_apps_permission_item" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/security_white_87"></View>




        <LinearLayout

            android:background="@android:color/white"
            android:paddingLeft="5dp"
            android:id="@+id/ok"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:layout_marginLeft="25dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="left|center"
                android:background="@drawable/ic_launcher" />


            <TextView
                android:textColor="#5a5f70"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-light"
                android:text="@string/app_name"
                android:textSize="13sp" />


            <ImageView
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_marginLeft="110dp"
                 />


            <FrameLayout
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"

                    android:src="@drawable/security_permission_set_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <ImageView
                android:layout_gravity="center"

                android:layout_marginTop="10dp"
                android:background="@drawable/security_permission_finger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />


            </FrameLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/security_white_87"></View>


        <LinearLayout
            android:background="@android:color/white"
            android:gravity="center"

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:id="@+id/abcdefghijk">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:src="@drawable/security_apps_permission_item" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/security_white_87"></View>

        <LinearLayout
            android:background="@android:color/white"
            android:gravity="center"

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:src="@drawable/security_apps_permission_item" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>

