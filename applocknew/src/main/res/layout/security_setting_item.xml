<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_gravity="center|left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/setting_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:background="@drawable/security_brif_setting" />

        <LinearLayout
            android:id="@+id/security_linera"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginLeft="17dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/security_title_bar_te"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/security_security_black_87"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/security_text_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingRight="20dp"
                android:textColor="@color/security_ftl_black_38"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="10dp"
        android:background="@drawable/security_ne" />

</FrameLayout>