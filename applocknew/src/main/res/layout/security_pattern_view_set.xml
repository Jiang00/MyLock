<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/A3"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:tag="security_pattern">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d56"
        android:background="@color/A1">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/d16"
            android:paddingRight="@dimen/d16"
            android:src="@drawable/back"
            android:tag="back"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/frist_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/frist2" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d141"
        android:background="@color/A1">

        <TextView
            android:id="@+id/tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/d13"
            android:gravity="center"
            android:tag="tip"
            android:text="@string/security_pattern_short"
            android:textColor="@color/A6"
            android:textSize="@dimen/s13" />

        <com.vactorapps.lib.customview.CustomerTypefaceTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/tip"
            android:layout_marginBottom="@dimen/d6"
            android:gravity="center"
            android:tag="title"
            android:text="@string/pattern_lock"
            android:textColor="@color/A3"
            android:textSize="@dimen/s16" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/setpattern_lottie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/d10" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical">

        <com.vactorapps.manager.page.PatternViewVac
            android:id="@+id/lpv_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="lpv_lock" />
    </LinearLayout>

    <com.vactorapps.lib.customview.CustomerTypefaceTextView
        android:id="@+id/number_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d46"
        android:layout_marginBottom="@dimen/d6"
        android:layout_marginLeft="@dimen/d16"
        android:layout_marginRight="@dimen/d16"
        android:gravity="center"
        android:tag="number_cancel"
        android:text="@string/switch_password"
        android:textColor="@color/A1"
        android:textSize="@dimen/s17" />
</LinearLayout>