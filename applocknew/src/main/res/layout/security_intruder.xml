<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp">

                <ImageView
                    android:id="@+id/intrude_new_i"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/security_new_intruder"
                    android:visibility="gone" />
            </FrameLayout>

            <ImageButton
                android:id="@+id/security_backg_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="200dp"
                android:background="@drawable/security_incade_cha"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/d168"
            android:layout_height="@dimen/d168">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.security.lib.customview.SecurityloadImage
                    android:id="@+id/security_ima"
                    android:layout_width="@dimen/d168"
                    android:layout_height="@dimen/d168"
                    android:scaleType="centerCrop"
                    app:roundHeight="0dp"
                    app:roundWidth="0dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/intruder_bj1"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/security_invade_ic"
                        android:layout_width="@dimen/d20"
                        android:layout_height="@dimen/d20"
                        android:layout_marginBottom="@dimen/d2"
                        android:layout_marginLeft="@dimen/d3" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/d3"
                        android:layout_marginRight="@dimen/d5"
                        android:textColor="@color/A3"
                        android:textSize="@dimen/s10"
                        tools:text="2012/12/12" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/bg_sel"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="top|end"
        android:visibility="gone" />

    <TextView
        android:id="@+id/security_invade_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/security_invade_ic"
        android:text="qqq"
        android:textColor="@color/security_te_3"
        android:textSize="15sp"
        android:visibility="gone" />
</LinearLayout>