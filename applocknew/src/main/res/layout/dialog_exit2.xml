<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/d301"
        android:layout_height="wrap_content"
        android:background="@drawable/normal_rectangle2">

        <TextView
            android:id="@+id/main_good_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d16"
            android:layout_marginRight="@dimen/d16"
            android:layout_marginTop="@dimen/d12"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/d2"
            android:text="@string/exit_ok"
            android:textColor="@color/A5"
            android:textSize="@dimen/s20" />

        <TextView
            android:id="@+id/main_good_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d16"
            android:layout_below="@id/main_good_tv"
            android:layout_marginRight="@dimen/d16"
            android:layout_marginTop="@dimen/d14"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/d2"
            android:text="@string/exit_ok2"
            android:textColor="@color/A5"
            android:textSize="@dimen/s14" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_good_tv2"
            android:layout_marginBottom="@dimen/d12"
            android:layout_marginLeft="@dimen/d24"
            android:layout_marginRight="@dimen/d24"
            android:layout_marginTop="@dimen/d22"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/main_bad"
                android:layout_width="@dimen/d1"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/security_cancel"
                android:textColor="@color/A6"
                android:textSize="@dimen/s14" />

            <TextView
                android:id="@+id/main_good"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/security_user_limit_confirm"
                android:textColor="@color/A5"
                android:textSize="@dimen/s14" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>