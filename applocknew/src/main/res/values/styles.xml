<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="locktheme" parent="@style/activityTheme">
        <item name="android:windowAnimationStyle">@style/MyAnimation.Window</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="MyAnimation.Window" parent="@android:style/Animation.Dialog">
        <item name="android:windowExitAnimation">@anim/security_scale_out</item>
        <item name="android:windowEnterAnimation">@anim/security_scale_in</item>
    </style>

    <style name="MessageBox" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/PostiveButtonStyle</item>
    </style>

    <style name="ForceClose" parent="Theme.AppCompat.Dialog">
        <item name="windowFixedWidthMajor">100%</item>
        <item name="windowFixedWidthMinor">100%</item>
        <item name="windowFixedHeightMajor">100%</item>
        <item name="windowFixedHeightMinor">100%</item>
        <item name="android:colorBackground">@color/security_background_bg</item>
    </style>

    <style name="PostiveButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/security_body_text_1_inverse</item>
        <item name="android:background">@drawable/security_material_green</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/security_label_background</item>
        <item name="android:textColor">@color/security_transp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Base application theme. -->
    <style name="activityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/security_theme_primary</item>
        <item name="colorPrimaryDark">@color/security_theme_primary</item>
        <item name="colorAccent">@color/security_theme_primary</item>

    </style>


    <style name="security_show_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/security_transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->

    </style>

    <!--入侵者设置dialog-->
    <style name="security_invade_dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/security_transparent</item>
        <item name="android:windowIsFloating">true</item>
    </style>


    <style name="dialog" parent="@android:style/Theme.Dialog">

        <item name="android:windowFrame">@null</item>

        <item name="android:windowIsFloating">true</item>

        <item name="android:windowIsTranslucent">true</item>

        <item name="android:windowNoTitle">true</item>

        <item name="android:background">@android:color/transparent</item>

        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="android:backgroundDimEnabled">true</item>

        <item name="android:backgroundDimAmount">0.6</item>

    </style>


    <style name="dialog_animation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/security_dialog_show_animation</item>

        <item name="android:windowFrame">@null</item>

        <item name="android:windowIsFloating">true</item>

        <item name="android:windowIsTranslucent">true</item>

        <item name="android:windowNoTitle">true</item>

        <item name="android:background">@android:color/transparent</item>

        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="android:backgroundDimEnabled">true</item>

        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textSize">10px</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>


    <style name="Theme.CustomTranslucent" parent="android:style/Theme.Translucent">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


</resources>