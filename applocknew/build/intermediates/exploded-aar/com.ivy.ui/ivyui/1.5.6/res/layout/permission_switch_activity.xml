<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/permission_switch_bg"
    android:gravity="center_horizontal"
    android:id="@+id/rootview"
    android:orientation="vertical">

    <TextView
        android:id="@+id/permission_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/ivy_permission_switch_dialog_title"
        android:textColor="#252525"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="294dp"
        android:layout_height="64dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="18dp"
        android:background="@android:color/white"
        android:paddingLeft="16dp"
        android:paddingRight="24dp">

        <TextView
            android:id="@+id/permission_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="#252525"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/permission_switch_left" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/permission_switch_right" />
    </RelativeLayout>

    <TextView
        android:id="@+id/permission_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="12dp"
        android:lineSpacingExtra="8dp"
        android:textColor="#707070"
        android:textSize="15dp" />

    <Button
        android:id="@+id/permission_ok"
        android:layout_width="184dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/click_btn_blue_with_corner20"
        android:enabled="true"
        android:text="@string/ivy_permission_ok"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</LinearLayout>