<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/com_ivy_module_themestore_layout_toolbar" />

    <android.support.design.widget.TabLayout
        android:id="@+id/com_ivy_module_themestore_id_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/com_ivy_module_themestore_color_tablayout_background"
        android:visibility="gone"
        app:tabIndicatorColor="@color/com_ivy_module_themestore_color_underline"
        app:tabMinWidth="150dp"
        app:tabSelectedTextColor="@color/com_ivy_module_themestore_color_select"
        app:tabTextColor="@color/com_ivy_module_themestore_color_unselect" />

    <FrameLayout
        android:id="@+id/com_ivy_module_themestore_id_framelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp">

        <android.support.v4.view.ViewPager
            android:id="@+id/com_ivy_module_themestore_id_theme_viewpager"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp" />
        <!--android:layout_marginLeft="3.33dp"-->
        <!--android:layout_marginRight="3.33dp"-->

        <ImageView
            android:id="@+id/com_ivy_module_themestore_id_local_bt"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="28dp"
            android:layout_marginRight="24dp"
            android:src="@drawable/com_ivy_module_themestore_drawable_local_button" />

        <include
            android:id="@+id/com_ivy_module_themestore_mainactivity_cachelayout"
            layout="@layout/com_ivy_module_themestore_layout_theme_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </FrameLayout>


</LinearLayout>