<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/com_ivy_module_themestore_color_tablayout_background"
    android:orientation="vertical">

    <include layout="@layout/com_ivy_module_themestore_layout_toolbar" />

    <android.support.design.widget.TabLayout
        android:id="@+id/com_ivy_module_themestore_id_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@color/com_ivy_module_themestore_color_tablayout_background"
        app:tabIndicatorColor="@color/com_ivy_module_themestore_color_select"
        app:tabMinWidth="150dp"
        app:tabSelectedTextColor="@color/com_ivy_module_themestore_color_select"
        app:tabTextColor="@color/com_ivy_module_themestore_color_unselect" />

    <android.support.v4.view.ViewPager
        android:id="@+id/com_ivy_module_themestore_id_theme_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:background="@color/com_ivy_module_themestore_color_white" />
</LinearLayout>