<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="70dp"
    android:paddingBottom="10dp"
    >
    <RelativeLayout
        android:id="@+id/com_ivy_module_thememstore_id_left_images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp">

        <ImageView
            android:id="@+id/com_ivy_module_thememstore_id_header_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/xrefreshview_arrow" />

        <ProgressBar
            android:id="@+id/com_ivy_module_thememstore_id_header_progressbar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/com_ivy_module_thememstore_id_header_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/com_ivy_module_thememstore_id_right_text"
        android:src="@drawable/xrefresh_ok" />

    <RelativeLayout
        android:id="@+id/com_ivy_module_thememstore_id_right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/com_ivy_module_thememstore_id_header_hint_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/com_ivy_module_thememstore_color_progress_text_color"
            android:text="@string/xrefreshview_header_hint_normal" />

        <TextView
            android:id="@+id/com_ivy_module_thememstore_id__header_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/com_ivy_module_thememstore_id_header_hint_textview"
            android:layout_marginTop="3dp"
            android:textColor="@color/com_ivy_module_thememstore_color_progress_text_color"
            android:text="@string/com_ivy_module_thememstore_string_never_refresh"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>