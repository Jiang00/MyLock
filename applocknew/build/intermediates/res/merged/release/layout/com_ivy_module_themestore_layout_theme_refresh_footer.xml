<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/com_ivy_module_thememstore_id_footer_content"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_gravity="center_horizontal"
    android:background="@android:color/white"
    android:padding="10dp"
    >


    <ProgressBar
        android:id="@+id/com_ivy_module_thememstore_id_footer_progressbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/com_ivy_module_thememstore_id_footer_hint_textview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/com_ivy_module_thememstore_color_progress_text_color"
        android:text="@string/xrefreshview_footer_hint_normal" />

    <TextView
        android:id="@+id/com_ivy_module_thememstore_id_footer_click_textview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/com_ivy_module_thememstore_color_progress_text_color"
        android:text="@string/xrefreshview_footer_hint_ready" />

</RelativeLayout>