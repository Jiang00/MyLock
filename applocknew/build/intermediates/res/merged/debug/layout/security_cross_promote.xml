<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/security_cross_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="7dp"
        android:background="@drawable/security_cross_close" />


    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="center">

        <FrameLayout
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/security_cross_shape">


            <ImageView
                android:id="@+id/cross_battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/security_cross_battery" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="88dp"
            android:background="@drawable/security_cross_shape">

            <ImageView
                android:id="@+id/cross_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/security_cross_clear" />

        </FrameLayout>


        <FrameLayout
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="88dp"
            android:background="@drawable/security_cross_shape">

            <ImageView
                android:id="@+id/cross_flash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/security_cross_more" />
        </FrameLayout>

    </LinearLayout>

</LinearLayout>