<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/numpad"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:tag="button1"
            android:id="@+id/button1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/security_number_1"
            android:onClick="onClick"
            android:text="1"
            android:textColor="@color/security_numpad_font_color"
            android:textSize="@dimen/numpad_font_size" />

        <Button
            android:tag="button2"
            android:id="@+id/button2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/security_number_2"
            android:onClick="onClick"
            android:text="2"
            android:textColor="@color/security_numpad_font_color"
            android:textSize="@dimen/numpad_font_size" />

        <Button
            android:tag="button3"
            android:id="@+id/button3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/security_number_3"
            android:onClick="onClick"
            android:text="3"
            android:textColor="@color/security_numpad_font_color"
            android:textSize="@dimen/numpad_font_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:tag="button4"
            android:id="@+id/button4"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/security_number_4"
            android:onClick="onClick"
            android:text="4"
            android:textColor="@color/security_numpad_font_color"
            android:textSize="@dimen/numpad_font_size" />

        <Button
            android:tag="button5"
            android:id="@+id/button5"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/security_number_5"
            android:onClick="onClick"
            android:text="5"
            android:textColor="@color/security_numpad_font_color"
            android:textSize="@dimen/numpad_font_size" />

        <Button
            android:tag="button6"
            android:id="@+id/button6"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/security_number_6"
            android:onClick="onClick"
            android:text="6"
            android:textColor="@color/security_numpad_font_color"
            android:textSize="@dimen/numpad_font_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:tag="button7"
            android:id="@+id/button7"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/security_number_7"
            android:onClick="onClick"
            android:text="7"
            android:textColor="@color/security_numpad_font_color"
            android:textSize="@dimen/numpad_font_size" />

        <Button
            android:tag="button8"
            android:id="@+id/button8"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/security_number_8"
            android:onClick="onClick"
            android:text="8"
            android:textColor="@color/security_numpad_font_color"
            android:textSize="@dimen/numpad_font_size" />

        <Button
            android:tag="button9"
            android:id="@+id/button9"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/security_number_9"
            android:onClick="onClick"
            android:text="9"
            android:textColor="@color/security_numpad_font_color"
            android:textSize="@dimen/numpad_font_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:orientation="horizontal">

        <Button
            android:tag="number_cancel"
            android:id="@+id/number_cancel"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/security_num_left"
            android:onClick="onClick"
             />

        <Button
            android:tag="button0"
            android:id="@+id/button0"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/security_num_left"
            android:onClick="onClick"
            android:text="0"
            android:textColor="@color/security_numpad_font_color"
            android:textSize="@dimen/numpad_font_size" />

        <ImageButton
            android:tag="backspace"
            android:id="@+id/backspace"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/security_number_right"
            android:onClick="onClick"
            />
    </LinearLayout>


    <Button

        android:textSize="15sp"
        android:id="@+id/ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:text="@android:string/ok"
        android:textColor="@color/security_refresh_progress_1"
        />


</LinearLayout>