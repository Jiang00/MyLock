<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/window"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_gravity="center"

    android:orientation="vertical" >
  
        
       <RelativeLayout
            android:layout_width="match_parent"
           	android:layout_height="68dp"

            android:orientation="horizontal" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@drawable/ivy_module_huojian_shape_dialog"
                android:layout_alignParentBottom="true"
                android:gravity="center"

                >
                <TextView
                    android:id="@+id/text_qian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:text="Clean "
                    android:textColor="#708d94"
                    android:singleLine="true" />
                <TextView
                    android:id="@+id/text_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="success"
                    android:layout_toRightOf="@id/text_qian"
                    android:layout_alignBaseline="@id/text_qian"
                    android:textSize="16sp"
                    android:textColor="#54dd97"
                    android:singleLine="true" />
                <TextView
                    android:id="@+id/text_h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/text_description"
                    android:textSize="11sp"
                    android:text=" Mb"
                    android:textColor="#708d94"
                    android:singleLine="true" />
            </RelativeLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="@drawable/ivy_module_huojian_clear_dialog"/>
        </RelativeLayout>
     <LinearLayout
         android:id="@+id/ad"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:background="#808080" />
</LinearLayout>